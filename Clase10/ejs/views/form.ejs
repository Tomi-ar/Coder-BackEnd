<body>
    <%- include('./templates/nav.ejs') %>
        <div class="container">
            <h1 class="text-center">Carga de productos</h1>
            <form action="/productos/form" method="post">
                <div class="form row mt-3 justify-content-center text-center border border-primary">
                    <div class="col-12 col-md-6">
                        <div class="my-3">
                            <label class="input">Nombre</label>
                            <input type="text" name="nombre">
                        </div>
                        <div class="my-3">
                            <label class="input">Precio</label>
                            <input type="number" name="precio">
                        </div>
                        <div class="my-3">
                            <label class="input">Link</label>
                            <input type="text" name="thumb">
                        </div>
                        <input class="btn btn-primary my-3" type="submit" value="Enviar">
                        <a class="btn btn-warning" role="button" href="/">Volver al inicio</a>
                    </div>
                </div>
            </form>
        </div>
</body>

